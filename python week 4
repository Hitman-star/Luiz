# File Read & Write Challenge ğŸ–‹ï¸

def modify_content(text):
    """Example modification: convert text to uppercase."""
    return text.upper()

try:
    with open("input.txt", "r") as infile:
        content = infile.read()

    modified = modify_content(content)

    with open("output.txt", "w") as outfile:
        outfile.write(modified)

    print("âœ… File successfully read and modified into 'output.txt'.")

except FileNotFoundError:
    print("âš ï¸ The file 'input.txt' was not found. Please create it and try again.")

# Error Handling Lab ğŸ§ª

filename = input("Enter the filename to read: ")

try:
    with open(filename, "r") as f:
        print("\nğŸ“– File Contents:\n")
        print(f.read())

except FileNotFoundError:
    print(f"âš ï¸ The file '{filename}' does not exist.")
except PermissionError:
    print(f"ğŸš« You donâ€™t have permission to read '{filename}'.")
except Exception as e:
    print(f"âŒ An unexpected error occurred: {e}")