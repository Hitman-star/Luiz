# File Read & Write Challenge 🖋️

def modify_content(text):
    """Example modification: convert text to uppercase."""
    return text.upper()

try:
    with open("input.txt", "r") as infile:
        content = infile.read()

    modified = modify_content(content)

    with open("output.txt", "w") as outfile:
        outfile.write(modified)

    print("✅ File successfully read and modified into 'output.txt'.")

except FileNotFoundError:
    print("⚠️ The file 'input.txt' was not found. Please create it and try again.")

# Error Handling Lab 🧪

filename = input("Enter the filename to read: ")

try:
    with open(filename, "r") as f:
        print("\n📖 File Contents:\n")
        print(f.read())

except FileNotFoundError:
    print(f"⚠️ The file '{filename}' does not exist.")
except PermissionError:
    print(f"🚫 You don’t have permission to read '{filename}'.")
except Exception as e:
    print(f"❌ An unexpected error occurred: {e}")